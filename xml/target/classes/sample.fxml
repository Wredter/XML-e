<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TabPane tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.gui.Controller">
  <tabs>
    <Tab text="Piosenki">
      <content>
        <AnchorPane prefHeight="600.0" prefWidth="800.0">
               <children>
                  <BorderPane>
                     <left>
                        <HBox BorderPane.alignment="CENTER_LEFT">
                           <children>
                              <ListView fx:id="listaPlaylist" onMouseClicked="#selectPlaylista" HBox.hgrow="ALWAYS" />
                              <ListView fx:id="listaPiosenekRef" HBox.hgrow="ALWAYS" />
                              <ListView fx:id="listaPiosenek" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </left>
                     <right>
                        <VBox BorderPane.alignment="CENTER_RIGHT">
                           <children>
                              <ComboBox VBox.vgrow="ALWAYS" />
                              <Button mnemonicParsing="false" text="Button" VBox.vgrow="ALWAYS" />
                              <Button mnemonicParsing="false" text="Button" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                     </right>
                  </BorderPane>
               </children></AnchorPane>
      </content>
    </Tab>
    <Tab text="Wykonawcy">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
               <children>
                  <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
                     <left>
                        <HBox BorderPane.alignment="CENTER">
                           <children>
                              <ListView fx:id="listaWykonawcow" onMouseClicked="#selectWykonawca" />
                              <ListView fx:id="listaArtystow" />
                           </children>
                        </HBox>
                     </left>
                  </BorderPane>
               </children></AnchorPane>
      </content>
    </Tab>
  </tabs>
</TabPane>
